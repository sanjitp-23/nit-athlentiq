<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PoseExercise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Red/Orange color scheme -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primaryColorLight</item>
        <item name="colorSecondary">@color/blueButton</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="android:colorBackground">@color/backgroundFill</item>
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Default body font: Sans Serif -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.PoseExercise" parent="Base.Theme.PoseExercise" />

    <!-- Heading style using Oswald font -->
    <style name="TextAppearance.Heading" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subheading style using Oswald font -->
    <style name="TextAppearance.Subheading" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>
</resources>